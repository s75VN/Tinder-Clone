<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".entry.RegisterActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        android:src="@drawable/tinderlogo"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="#E1CFCF"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/name"
            android:paddingHorizontal="5dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="#E1CFCF"
            android:textSize="20dp"
            android:drawableLeft="@drawable/user"
            android:drawableTint="#fff"
            android:drawablePadding="15dp"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="#E1CFCF"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/email"
            android:paddingHorizontal="5dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#E1CFCF"
            android:textSize="20dp"
            android:drawableLeft="@drawable/email"
            android:drawableTint="#fff"
            android:drawablePadding="15dp"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="#E1CFCF"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:paddingHorizontal="5dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#E1CFCF"
            android:textSize="20dp"
            android:drawableLeft="@drawable/password"
            android:drawableTint="#fff"
            android:drawablePadding="15dp"
            android:backgroundTint="#fff"
            android:textColor="#fff"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/male"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/male"
            android:drawableTint="#fff"
            android:paddingTop="10dp"
            android:background="@drawable/background_button"
            android:drawableBottom="@drawable/bottom_gender"
            android:text="male"
            android:onClick="chooseGender"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginHorizontal="10dp"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/female"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/female"
            android:paddingTop="10dp"
            android:drawableTint="#fff"
            android:onClick="chooseGender"
            android:background="@drawable/background_button"
            android:text="female"
            android:drawablePadding="5dp"
            android:textColor="#fff"
            android:drawableBottom="@drawable/bottom_gender"
            android:textAllCaps="false"
            android:textSize="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="340dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:text="REGISTER"
        android:textColor="#fff"
        android:textSize="20dp"
        android:onClick="register"
        android:background="#0083cb"/>

</LinearLayout>