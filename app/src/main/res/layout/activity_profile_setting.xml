<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:onClick="goBack"
            android:tint="#ff566f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinder"
            android:textSize="30dp"
            android:textColor="#ff566f"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:elevation="2dp"
        android:background="#B1BAB1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f6fb"
        android:orientation="vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/avatar"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"
            android:onClick="updateAvatar"
            android:src="@drawable/avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:paddingLeft="10dp"/>
        
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:background="#fff"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:background="#fff"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_marginBottom="3dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:background="#fff"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:background="#fff"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:background="#fff"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"/>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/male"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:drawableTop="@drawable/male"
                android:drawableTint="#ff5f69"
                android:paddingTop="10dp"
                android:background="@drawable/background_button2"
                android:drawableBottom="@drawable/bottom_gender2"
                android:text="male"
                android:onClick="chooseGender"
                android:textColor="#ff5f69"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                android:textSize="20dp"
                />
            <Button
                android:id="@+id/female"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:drawableTop="@drawable/female"
                android:paddingTop="10dp"
                android:drawableTint="#ff5f69"
                android:onClick="chooseGender"
                android:background="@drawable/background_button2"
                android:text="female"
                android:drawablePadding="5dp"
                android:textColor="#ff5f69"
                android:drawableBottom="@drawable/bottom_gender2"
                android:textAllCaps="false"
                android:textSize="20dp"
                />
        </LinearLayout>


        <Button
            android:id="@+id/updateProfile"
            android:layout_width="340dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:paddingVertical="15dp"
            android:text="UPDATE"
            android:onClick="updateProfile"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="#0083cb"/>
    </LinearLayout>

    </ScrollView>



</LinearLayout>