<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6fb"
    android:orientation="vertical"
    tools:context=".settings.FilterSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:onClick="goBack"
            android:tint="#ff566f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinder"
            android:textSize="30dp"
            android:textColor="#ff566f"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:elevation="2dp"
        android:background="#D0D5D0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interested in :"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/male"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:drawableTop="@drawable/male"
            android:drawableTint="#ff5f69"
            android:paddingTop="10dp"
            android:background="@drawable/background_button2"
            android:drawableBottom="@drawable/bottom_gender2"
            android:text="male"
            android:onClick="chooseGender"
            android:textColor="#ff5f69"
            android:textAllCaps="false"
            android:layout_marginHorizontal="10dp"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/female"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/female"
            android:paddingTop="10dp"
            android:drawableTint="#ff5f69"
            android:onClick="chooseGender"
            android:background="@drawable/background_button2"
            android:text="female"
            android:drawablePadding="5dp"
            android:textColor="#ff5f69"
            android:drawableBottom="@drawable/bottom_gender2"
            android:textAllCaps="false"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/both"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/both"
            android:paddingTop="10dp"
            android:drawableTint="#ff5f69"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGender"
            android:background="@drawable/background_button2"
            android:text="both"
            android:drawablePadding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#ff5f69"
            android:drawableBottom="@drawable/bottom_gender2"
            android:textAllCaps="false"
            android:textSize="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="340dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:paddingVertical="15dp"
        android:text="LOGOUT"
        android:textColor="#fff"
        android:textSize="20dp"
        android:onClick="goToEntry"
        android:background="#0083cb"/>
</LinearLayout>